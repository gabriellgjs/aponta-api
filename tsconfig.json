{
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@employees/*": ["./src/employees/*"],
      "@appointments/*": ["./src/appointments/*"],
      "@patients/*": ["./src/patients/*"],
      "@users/*": ["./src/users/*"],
      "@roles/*": ["./src/roles/*"],
      "@permissions/*": ["./src/permissions/*"],
      "@shared/*": ["./src/shared/*"],
      "@prisma/*": ["./prisma/*"],
      "@apiErrors/*": ["./api/shared/utils/errors/*"],
      "@appointmentsAPI/*": ["./api/appointments/*"],
      "@employeesAPI/*": ["./api/employees/*"],
      "@authAPI/*": ["./api/auth/*"],
      "@usersAPI/*": ["./api/users/*"],
      "@patientsAPI/*": ["./api/patients/*"],
      "@permissionsAPI/*": ["./api/permissions/*"],
      "@rolesAPI/*": ["./api/roles/*"],
      "@sharedAPI/*": ["./api/shared/*"],
    },
    "rootDir": "./",
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
