{
  "openapi":"3.0.2",

  "info": {
    "title":"APONTA- API",
    "description": "Essa API é um gerenciador de agendamentos genérico, tendo em vista que está sendo elaborado como o projeto de conclusão de curso de Gabriel José Silva.",
    "contact": {
      "name": "Gabriel Silva",
      "email": "contato.gabrieljosesilva@gmail.com",
      "url": "https://github.com/gabriellgjs"
    },
    "version":"1.0.0"
  },
  "servers": [
    {
      "url":"http://localhost:3000/v1/"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },

  "paths": {
    "/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Realizar login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "teste@email.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso"
            },
          "401": {
            "description": "Email ou senha inválidos"
          },
          "500": {
            "description": "Erro do servidor"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      }
    },

    "/roles": {
      "get": {
        "summary": "Buscar todos os cargos",
        "tags": ["Cargos"],
        "security": [
          {"BearerAuth" :  ["BearerAuth"]}
        ],
        "responses": {
          "200": {
            "description": "Array de objeto dos cargos"
          },
          "401": {
            "description": "Acesso negado"
          },
          "500": {
            "description": "Erro do servidor"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      },

      "post": {
        "summary": "Criar um novo cargo",
        "tags": ["Cargos"],
        "security": [
          {"BearerAuth" :  ["BearerAuth"]}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Teste"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Id do cargo criado"
          },
          "400": {
            "description": "Erros de validação"
          },
          "401": {
            "description": "Acesso negado"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      }
    },

    "/roles/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "Busque aqui pelo id"
        }
      ],
      "get": {
        "summary": "Buscar cargo pelo id",
        "tags": ["Cargos"],
        "security": [
          {"BearerAuth" :  ["BearerAuth"]}
        ],


        "responses": {
          "200": {
            "description": "Um objeto de cargo"
          },
          "401": {
            "description": "Acesso negado"
          },
          "404": {
            "description": "Cargo não encontrado"
          },
          "500": {
            "description": "Erro do servidor"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      }
    },

    "/employees": {
      "get": {
        "security": [
          {"BearerAuth" :  ["BearerAuth"]}
        ],
        "tags": ["Funcionário"],
        "summary": "Buscar todos os funcionários",
        "responses": {
          "200": {
            "description": "Array de objeto dos funcionários"
          },
          "401": {
            "description": "Acesso negado"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      }
    },

    "/employees/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "Buscar pelo id"
        }
      ],
      "get": {
        "security": [
          {"BearerAuth" :  ["BearerAuth"]}
        ],
        "tags": ["Funcionário"],
        "summary": "Buscar funcionário pelo id",
        "responses": {
          "200": {
            "description": "Um objeto do funcionário"
          },
          "401": {
            "description": "Acesso negado"
          },
          "503": {
            "description": "Serviço indisponível, tente novamente mais tarde"
          }
        }
      }
    }

  }
}